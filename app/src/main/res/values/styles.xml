<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="RtlCompat">

    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/application_base_color</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
        <item name="editTextColor">@color/color_text_dark</item>
        <item name="colorAccent">@color/theme_primary_dark</item>
        <item name="actionMenuTextColor">@color/color_white</item>
        <item name="android:orientation">horizontal</item>
        <!--沉浸式状态栏-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="FullTheme" parent="BaseAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">@color/application_base_color</item>
    </style>

    <style name="radioButtonStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="albumClassifyStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_album_classify</item>
        <item name="android:textColor">@color/color_album_classify</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/small_margin_5dp</item>
        <item name="android:paddingRight">@dimen/small_margin_5dp</item>
        <item name="android:minWidth">65dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">27dp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--TextView默认属性-->
    <style name="textStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--Button默认属性-->
    <style name="buttonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>

    </style>

    <!--EditText默认属性-->
    <style name="editTextStyle" parent="android:Widget.EditText">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColorHint">@color/text_hint_gray</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name="editTextStyle1" parent="android:Widget.EditText">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/text_hint_gray</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name="bottomImageStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="popup_text_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/popup_home_top_selector</item>
    </style>


    <!--Dialog属性-->
    <style name="dialogDefaultStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!--搜索框的样式-->
    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@color/theme_primary_dark</item>
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>
        <item name="searchSuggestionBackground">@android:color/white</item>
        <item name="android:textColor">@color/theme_primary_text_inverted</item>
        <item name="android:textColorHint">@color/theme_secondary_text_inverted</item>
        <item name="android:hint">@string/search</item>
    </style>

    <!--设置TabLayout字体属性-->
    <style name="TabLayout" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PopupAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popup_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_out</item>
    </style>

    <style name="PhotoPopupAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_photo_popup_in</item>
        <item name="android:windowExitAnimation">@anim/anim_photo_popup_out</item>
    </style>


    <style name="DefaultSimpleDraweeView">
        <!--实际图片的显示方式-->
        <item name="actualImageScaleType">centerCrop</item>
        <!--加载图片的动画渐变时间-->
        <item name="fadeDuration">1000</item>
        <!--默认占位图-->
        <item name="placeholderImage">@mipmap/ic_placeholder</item>
        <!--默认占位图的显示方式-->
        <item name="placeholderImageScaleType">centerInside</item>
        <!--默认加载图的旋转一圈时间-->
        <item name="progressBarAutoRotateInterval">3000</item>
        <!--默认加载图-->
        <item name="progressBarImage">@mipmap/ic_progress</item>
        <!--默认加载图显示方式-->
        <item name="progressBarImageScaleType">centerInside</item>
    </style>


    <!-- 对话框样式 -->
    <style name="DialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_inputHint"></item>
        <item name="atg_borderColor">@color/color_text_gravy</item>
        <item name="atg_textColor">@color/color_text_gravy</item>
        <item name="atg_backgroundColor">@color/bg_gray</item>
        <item name="atg_dashBorderColor">#AAAAAA</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#DE000000</item>
        <item name="atg_checkedBorderColor">#49C120</item>
        <item name="atg_checkedTextColor">#FFFFFF</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">#49C120</item>
        <item name="atg_pressedBackgroundColor">@color/white</item>
        <item name="atg_borderStrokeWidth">0.5dp</item>
        <item name="atg_textSize">13sp</item>
        <item name="atg_horizontalSpacing">8dp</item>
        <item name="atg_verticalSpacing">10dp</item>
        <item name="atg_horizontalPadding">10dp</item>
        <item name="atg_verticalPadding">10dp</item>
    </style>

    <style name="TagGroup.Small" parent="TagGroup">
        <item name="atg_textSize">10sp</item>
        <item name="atg_horizontalSpacing">6dp</item>
        <item name="atg_verticalSpacing">3dp</item>
        <item name="atg_horizontalPadding">8dp</item>
        <item name="atg_verticalPadding">2dp</item>
    </style>

    <style name="TagGroup.Large" parent="TagGroup">
        <item name="atg_borderStrokeWidth">0.7dp</item>
        <item name="atg_textSize">15sp</item>
        <item name="atg_horizontalSpacing">9dp</item>
        <item name="atg_verticalSpacing">5dp</item>
        <item name="atg_horizontalPadding">14dp</item>
        <item name="atg_verticalPadding">4dp</item>
    </style>

    <style name="TagGroup.Beauty_Red" parent="TagGroup">
        <item name="atg_borderColor">#FF3D7F</item>
        <item name="atg_textColor">#FF3D7F</item>
        <item name="atg_checkedBorderColor">#FF3D7F</item>
        <item name="atg_checkedBackgroundColor">#FF3D7F</item>
    </style>

    <style name="TagGroup.Beauty_Red.Inverse" parent="TagGroup">
        <item name="atg_borderColor">#FF3D7F</item>
        <item name="atg_textColor">#FFFFFF</item>
        <item name="atg_backgroundColor">#FF3D7F</item>
        <item name="atg_inputHintColor">#80FFFFFF</item>
        <item name="atg_inputTextColor">#DEFFFFFF</item>
        <item name="atg_checkedBorderColor">#FF3D7F</item>
        <item name="atg_checkedTextColor">#FF3D7F</item>
        <item name="atg_checkedMarkerColor">#FF3D7F</item>
        <item name="atg_checkedBackgroundColor">#FFFFFF</item>
        <item name="atg_pressedBackgroundColor">#FF99B1</item>
    </style>

</resources>
