<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".ItemAlbumSelectionLayout">

        <variable
            name="attr"
            type="com.appbaba.iz.entity.main.CasesAttrEntity.AttrParent"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/bg_white_gravy_selector"
                  android:gravity="center_vertical"
                  android:minHeight="@dimen/labelHeight_35dp"
                  android:orientation="vertical"
                  android:paddingStart="@dimen/middle_margin_10dp"
                  tools:ignore="RtlCompat,RtlSymmetry">

        <TextView
            style="@style/textStyle"
            android:text="@{attr.title}"
            app:caseAttrTextColor="@{attr.isCheck}"/>
    </LinearLayout>
</layout>