<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data class=".FragmentHomeBinding"></data>
    <FrameLayout   android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray">
        <include
            android:id="@+id/include_top_title"
            layout="@layout/item_top_title_main"></include>
        <com.appbaba.iz.widget.ScrollView.MyScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@color/bg_gray"
            android:layout_marginTop="15dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/relate_1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_item_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:background="@color/bg_gray"/>
                        <TextView
                            android:id="@+id/tv_title_1_en"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_above="@+id/linear_center"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"
                            android:layout_centerInParent="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/linear_center">
                            <TextView
                                android:id="@+id/tv_title_1_cn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textSize="13sp"
                                android:layout_weight="4"
                                android:background="@color/half_black"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_detail_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_below="@+id/linear_center"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/relate_2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp">

                        <ImageView
                            android:id="@+id/iv_item_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:background="@color/bg_gray"/>
                        <TextView
                            android:id="@+id/tv_title_2_en"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_above="@+id/linear_center_2"
                            android:paddingLeft="10dp"
                            android:paddingBottom="2dp"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/linear_center_2">
                            <TextView
                                android:id="@+id/tv_title_2_cn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:paddingLeft="10dp"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:layout_weight="4"
                                android:background="@color/half_black"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_detail_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:layout_below="@+id/linear_center_2"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relate_3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/iv_item_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:background="@color/bg_gray"/>
                        <TextView
                            android:id="@+id/tv_title_3_en"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_above="@+id/linear_center_3"
                            android:paddingLeft="10dp"
                            android:paddingBottom="2dp"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/linear_center_3">
                            <TextView
                                android:id="@+id/tv_title_3_cn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:layout_weight="4"
                                android:background="@color/half_black"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_detail_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_below="@+id/linear_center_3"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="10dp">

               <RelativeLayout
                   android:id="@+id/relate_5"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="4dp"
                   android:layout_weight="1">

                   <ImageView
                       android:id="@+id/iv_item_5"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="fitXY"
                       android:background="@color/bg_gray"/>
                   <TextView
                       android:id="@+id/tv_title_5_en"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="12sp"
                       android:textColor="@color/white"
                       android:layout_above="@+id/linear_center_5"
                       android:paddingLeft="10dp"
                       android:paddingBottom="2dp"
                       android:layout_centerInParent="true"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:id="@+id/linear_center_5">
                       <TextView
                           android:id="@+id/tv_title_5_cn"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:paddingLeft="10dp"
                           android:paddingBottom="2dp"
                           android:paddingTop="2dp"
                           android:layout_weight="4"
                           android:textSize="12sp"
                           android:background="@color/half_black"
                           android:textColor="@color/white"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="3"
                           />
                   </LinearLayout>

                   <TextView
                       android:id="@+id/tv_detail_5"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:layout_below="@+id/linear_center_5"
                       android:paddingLeft="10dp"
                       android:paddingTop="2dp"
                       android:textSize="12sp"
                       android:layout_centerInParent="true"/>
               </RelativeLayout>
               <RelativeLayout
                   android:id="@+id/relate_4"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:layout_marginLeft="4dp"
                   android:layout_marginRight="8dp"
                   android:layout_weight="1">

                   <ImageView
                       android:id="@+id/iv_item_4"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="fitXY"
                       android:background="@color/bg_gray"/>
                   <TextView
                       android:id="@+id/tv_title_4_en"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:layout_above="@+id/linear_center_4"
                       android:paddingLeft="10dp"
                       android:paddingBottom="2dp"
                       android:textSize="12sp"
                       android:layout_centerInParent="true"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:id="@+id/linear_center_4">
                       <TextView
                           android:id="@+id/tv_title_4_cn"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="12sp"
                           android:paddingLeft="10dp"
                           android:paddingBottom="2dp"
                           android:paddingTop="2dp"
                           android:layout_weight="4"
                           android:background="@color/half_black"
                           android:textColor="@color/white"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="3"
                           />
                   </LinearLayout>

                   <TextView
                       android:id="@+id/tv_detail_4"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:layout_below="@+id/linear_center_4"
                       android:paddingLeft="10dp"
                       android:paddingTop="2dp"
                       android:textSize="12sp"
                       android:layout_centerInParent="true"/>
               </RelativeLayout>
           </LinearLayout>
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"></LinearLayout>
</LinearLayout>
        </com.appbaba.iz.widget.ScrollView.MyScrollView>
    </LinearLayout>
    </FrameLayout>
</layout>