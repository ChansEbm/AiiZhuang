<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data class=".ActivityRegisterBrandsBinding"></data>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <include
                android:id="@+id/include_top_title"
                layout="@layout/item_top_title_simple_back"></include>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:background="@drawable/register_aty_top_bar_bg"
                android:padding="1dp"
                >
                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:text="@string/register_activity_top_register"
                    android:background="@drawable/register_aty_top_left_selector"
                    android:textColor="@drawable/register_aty_top_bar_tv_selector"

                    />
                <TextView
                    android:id="@+id/tv_brand_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@drawable/register_aty_top_bar_tv_selector"
                    android:text="@string/register_activity_top_brand"
                    android:background="@drawable/register_aty_top_right_selector"/>
            </LinearLayout>

        </RelativeLayout>
        <ViewSwitcher
            android:id="@+id/sw_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/line_gray">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                   >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_brand_name"
                        />
                    <TextView
                        android:id="@+id/tv_register_brands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_brand_hint"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/text_hint_gray"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:src="@mipmap/more_arrow_right"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_username"
                        />

                    <EditText
                        android:id="@+id/edt_register_username"
                        style="@style/editTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/register_activity_tv_must_hint"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_shop_name"
                        />
                        <EditText
                            android:id="@+id/edt_register_shop"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/register_activity_tv_must_hint"
                            />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_address"
                        />
                        <EditText
                            android:id="@+id/edt_register_address"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/register_activity_tv_must_hint"
                            />
                </LinearLayout>>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        style="@style/textStyle"
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_mobile"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        />
                    <EditText
                        android:id="@+id/edt_register_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_1"
                        android:background="@color/transparent"
                        android:inputType="phone"
                        android:layout_toLeftOf="@+id/tv_register_msg"
                        />

                    <TextView
                        android:id="@+id/tv_register_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="14sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/register_aty_btn_msg_selector"
                        android:text="@string/register_activity_r_btn_message"/>

                </RelativeLayout>>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_check_num"
                        />
                    <EditText
                        android:id="@+id/edt_register_check"
                        style="@style/editTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/register_activity_tv_must_hint"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_password"
                        />
                    <EditText
                        android:id="@+id/edt_register_password"
                        style="@style/editTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:hint="@string/register_activity_tv_must_hint"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_re_password"
                        />
                    <EditText
                        android:id="@+id/edt_register_re_password"
                        style="@style/editTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:hint="@string/register_activity_tv_must_hint"
                        />
                </LinearLayout>
</LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></LinearLayout>
                <Button
                    style="?attr/borderlessButtonStyle"
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@drawable/register_aty_r_btn_r_bg_selector"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="19sp"
                    android:text="@string/register_activity_r_btn_sure"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/line_gray">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/bg_white_bottom_line">
                            <TextView
                                style="@style/textStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/register_activity_b_tv_brand_name"
                                />
                        <EditText
                            android:id="@+id/edt_brands_name"
                            style="@style/editTextStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/register_activity_tv_must_hint"
                            android:drawablePadding="10dp"

                        />
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/bg_white_bottom_line">
                        <TextView
                            style="@style/textStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_b_tv_contracts"
                            />
                        <EditText
                            android:id="@+id/edt_brands_contract"
                            style="@style/editTextStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="10dp"

                            android:hint="@string/register_activity_tv_must_hint"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/bg_white_bottom_line">
                        <TextView
                            style="@style/textStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_b_tv_mobile"
                            />
                        <EditText
                            android:id="@+id/edt_brands_mobile"
                            style="@style/editTextStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="10dp"

                            android:hint="@string/register_activity_tv_must_hint"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/bg_white_bottom_line">
                        <TextView
                            style="@style/textStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_b_tv_address"
                            />
                        <EditText
                            android:id="@+id/edt_brands_address"
                            style="@style/editTextStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="10dp"

                            android:hint="@string/register_activity_tv_option_hint"
                            />
                    </LinearLayout>
                    </LinearLayout>
                <Button
                    style="?attr/borderlessButtonStyle"
                    android:id="@+id/btn_brands_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@drawable/register_aty_r_btn_r_bg_selector"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="19sp"
                    android:text="@string/register_activity_b_btn_into"/>
                </LinearLayout>
            </ViewSwitcher>

        </LinearLayout>
    </layout>