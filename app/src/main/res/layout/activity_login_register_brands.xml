<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data class=".ActivityRegisterBrandsBinding"></data>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <include layout="@layout/item_top_title_simple_back"></include>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:background="@drawable/register_aty_top_bar_bg"
                android:padding="1dp"
                >
                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="18sp"
                    android:focusable="true"
                    android:text="@string/register_activity_top_register"
                    android:background="@drawable/register_aty_top_left_selector"
                    android:textColor="@drawable/register_aty_top_bar_tv_selector"

                    />
                <TextView
                    android:id="@+id/tv_brand_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:textColor="@drawable/register_aty_top_bar_tv_selector"
                    android:text="@string/register_activity_top_brand"
                    android:background="@drawable/register_aty_top_right_selector"/>
            </LinearLayout>

        </RelativeLayout>
        <ViewSwitcher
            android:id="@+id/sw_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/line_gray">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                   >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_brand_name"
                        android:textSize="19sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_brand_hint"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/icon_top_back"
                        android:textSize="19sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_username"
                        android:textSize="19sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_tv_must_hint"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/icon_top_back"
                        android:textSize="19sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_shop_name"
                        android:textSize="19sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_tv_must_hint"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/icon_top_back"
                        android:textSize="19sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_address"
                        android:textSize="19sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_tv_must_hint"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/icon_top_back"
                        android:textSize="19sp"
                        />
                </RelativeLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_mobile"
                        android:textSize="19sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_tv_must_hint"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/icon_top_back"
                        android:textSize="19sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_check_num"
                        android:textSize="19sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_tv_must_hint"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/icon_top_back"
                        android:textSize="19sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_password"
                        android:textSize="19sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_tv_must_hint"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/icon_top_back"
                        android:textSize="19sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/bg_white_bottom_line">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_r_tv_re_password"
                        android:textSize="19sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_activity_tv_must_hint"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/icon_top_back"
                        android:textSize="19sp"
                        />
                </RelativeLayout>
</LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@drawable/register_aty_r_btn_r_bg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/register_activity_r_btn_sure"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@color/line_gray">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_tv_must_hint"
                            android:textSize="19sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_tv_must_hint"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/icon_top_back"
                            android:textSize="19sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@color/line_gray">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_tv_must_hint"
                            android:textSize="19sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_tv_must_hint"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/icon_top_back"
                            android:textSize="19sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@color/line_gray">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_tv_must_hint"
                            android:textSize="19sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_tv_must_hint"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/icon_top_back"
                            android:textSize="19sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@color/line_gray">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_tv_must_hint"
                            android:textSize="19sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_activity_tv_must_hint"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/icon_top_back"
                            android:textSize="19sp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ViewSwitcher>

    </LinearLayout>
</layout>