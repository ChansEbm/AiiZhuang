<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"
                 android:topLeftRadius="3dp" android:topRightRadius="3dp"></corners>
            <solid android:color="@color/bg_color_dark"></solid>
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"
                android:topLeftRadius="3dp" android:topRightRadius="3dp"></corners>
            <solid android:color="@color/color_white"></solid>
            <padding android:right="1dp" android:left="1dp" android:bottom="1dp" android:top="1dp"></padding>
        </shape>
    </item>
</layer-list>