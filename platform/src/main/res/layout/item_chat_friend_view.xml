<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class=".ItemChatFriendViewBinding"></data>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dv_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:roundAsCircle="true"
        android:layout_gravity="left|top"
        app:placeholderImage="@mipmap/icon_person"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
       >
        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_bubble_left"
            android:textSize="15sp"
            android:layout_gravity="left|center"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_bubble_left"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            android:layout_gravity="left|center"
            />
        <ImageView
            android:id="@+id/iv_voice_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_left_voice_1"
            android:layout_gravity="left|center"
            android:background="@drawable/icon_bubble_left"
            android:paddingRight="50dp"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_time_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
</layout>