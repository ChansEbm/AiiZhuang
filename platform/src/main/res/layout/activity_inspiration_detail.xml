<!--suppress XmlUnusedNamespaceDeclaration -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".ActivityInspirationDetailBinding"></data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   app:layout_collapseMode="pin"
                   android:paddingTop="?attr/actionBarSize">
                   <TextView
                       android:id="@+id/tv_title"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:text="sdfsdfsdf"
                       android:gravity="center"
                       android:padding="5dp"
                       android:textColor="@android:color/black"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@mipmap/icon_mark"
                       android:textColor="@color/application_base_color"
                       android:singleLine="true"
                       android:drawablePadding="10dp"
                       android:text="sdf"
                       android:layout_gravity="center"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/application_base_color"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:text="sdfsdfsdsdfsfsdffsdf"
                       />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:paddingTop="5dp"
                       android:gravity="center">

                       <com.facebook.drawee.view.SimpleDraweeView
                           android:id="@+id/dv_head"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:layout_gravity="center"
                           app:roundAsCircle="true"
                           app:placeholderImage="@mipmap/ic_launcher"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="sdf"
                           android:padding="10dp"
                           android:textSize="25sp"
                           android:textColor="@android:color/black"/>
                   </LinearLayout>

               </LinearLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title=""
                    >

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/icon_back"/>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>



          <android.support.v7.widget.RecyclerView
              android:id="@+id/recycle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_behavior="@string/appbar_scrolling_view_behavior">

          </android.support.v7.widget.RecyclerView>



    </android.support.design.widget.CoordinatorLayout>
</layout>