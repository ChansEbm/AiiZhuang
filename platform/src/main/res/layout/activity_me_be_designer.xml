<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data class="ActivityBeDesignerBinding"></data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <include
        android:id="@+id/include_top_title"
        layout="@layout/title_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_color">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/activity_me_designer_name"/>
                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:paddingRight="15dp"
                        android:background="@color/color_white"/>
                </LinearLayout>
                <include layout="@layout/line_view"></include>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/activity_me_designer_email"/>
                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:inputType="textEmailAddress"
                        android:paddingRight="15dp"
                        android:background="@color/color_white"/>
                </LinearLayout>
                <include layout="@layout/line_view"></include>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/activity_me_designer_wechat"/>
                    <EditText
                        android:id="@+id/edt_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:gravity="right"
                        android:paddingRight="15dp"
                        android:background="@color/color_white"/>
                </LinearLayout>
                <include layout="@layout/line_view"></include>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/activity_me_designer_city"/>
                    <TextView
                        android:id="@+id/tv_city_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:drawableRight="@mipmap/icon_more_arrow_black_right"
                        android:background="@color/color_white"/>
                </LinearLayout>
                <include layout="@layout/line_view"></include>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/activity_me_designer_id_num"/>
                    <EditText
                        android:id="@+id/edt_carID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:digits="0123456789xX"
                        android:gravity="right"
                        android:lines="1"
                        android:paddingRight="15dp"
                        android:background="@color/color_white"/>
                </LinearLayout>
                <include layout="@layout/line_view"></include>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/activity_me_designer_id_photo"/>
                 <LinearLayout
                     android:id="@+id/linear_photo"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="right|center_vertical">
                    <ImageView
                        android:id="@+id/iv_id_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"/>
                    <ImageView
                        android:id="@+id/iv_id_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"/>
                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@mipmap/icon_more_arrow_black_right"/>
                 </LinearLayout>
                </LinearLayout>
                <include layout="@layout/line_view"></include>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/activity_me_designer_myself"/>
                    <EditText
                        android:id="@+id/edt_myself"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:lines="5"
                        android:hint="@string/activity_me_designer_hint_myself"
                        android:gravity="top"
                        android:textColorHint="@color/bg_color_light"
                        android:background="@color/color_white"/>
                </LinearLayout>
                <include layout="@layout/line_view"></include>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/activity_me_designer_upload"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textSize="18sp"
                android:background="@color/base_color_tv_bg"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
</layout>