<!--suppress XmlUnusedNamespaceDeclaration -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class=".FragmentMeBinding"></data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_me_bg"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@android:color/black"/>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark"
                    app:layout_collapseMode="pin"
                    app:title=""
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|right">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@mipmap/icon_bubble"/>
                        <ImageView
                            android:id="@+id/iv_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_settings"
                            android:padding="10dp"/>
                    </LinearLayout>



                </android.support.v7.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom">
                    <ImageView
                        android:layout_width="@dimen/image_width"
                        android:layout_height="@dimen/image_width"
                        android:src="@mipmap/ic_launcher"
                        android:layout_gravity="center_horizontal|bottom"
                        app:layout_anchor="@id/toolbar"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="sdfsdf"/>
                    <LinearLayout
                        android:id="@+id/linear_tab"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/color_white"

                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear_title_parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <com.appbaba.platform.widget.MyTextView
                                android:id="@+id/tv_my_collection"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:layout_weight="1"
                                app:text="@string/fragment_me_collection"/>


                            <com.appbaba.platform.widget.MyTextView
                                android:id="@+id/tv_my_export"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                app:text="@string/fragment_me_export"/>

                            <com.appbaba.platform.widget.MyTextView
                                android:id="@+id/tv_my_like"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                app:text="@string/fragment_me_like"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_move"
                            android:layout_width="match_parent"
                            android:layout_height="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:background="@color/application_base_color"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color"/>
                </LinearLayout>


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v4.view.ViewPager>


    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
</layout>